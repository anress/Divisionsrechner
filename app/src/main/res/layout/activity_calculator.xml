<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context="com.example.anja.aufgabe1_se2.Calculator">

    <Button
        android:id="@+id/button"
        android:layout_width="216dp"
        android:layout_height="56dp"
        android:backgroundTint="#456F9A"
        android:onClick="calculate"
        android:text="Dividiere"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@+id/input2"
        app:layout_constraintHorizontal_bias="0.497" />

    <EditText
        android:id="@+id/input1"
        android:layout_width="131dp"
        android:layout_height="51dp"
        android:layout_marginRight="97dp"
        android:layout_marginTop="67dp"
        android:ems="10"
        android:inputType="number|numberSigned|numberDecimal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heading" />

    <EditText
        android:id="@+id/input2"
        android:layout_width="131dp"
        android:layout_height="51dp"
        android:layout_marginRight="97dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="number|numberSigned|numberDecimal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input1" />

    <TextView
        android:id="@+id/heading"
        android:layout_width="265dp"
        android:layout_height="50dp"
        android:text="Divisionsrechner"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#345F9A"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="61dp" />

    <TextView
        android:id="@+id/divisor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Divisor:"
        android:textColor="#000000"
        android:textSize="22sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/input2"
        android:layout_marginRight="8dp"
        android:layout_marginTop="53dp"
        app:layout_constraintTop_toBottomOf="@+id/dividend" />

    <TextView
        android:id="@+id/dividend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dividend:"
        android:textColor="#000000"
        android:textSize="22sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/input1"
        android:layout_marginRight="8dp"
        android:layout_marginTop="82dp"
        app:layout_constraintTop_toBottomOf="@+id/heading"
        app:layout_constraintHorizontal_bias="0.61" />

    <TextView
        android:id="@+id/output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Output:"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="61dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="46dp"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <TextView
        android:id="@+id/outputField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="46dp"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@+id/output"
        app:layout_constraintTop_toBottomOf="@+id/button" />

</android.support.constraint.ConstraintLayout>
